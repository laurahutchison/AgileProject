@page
@model Test.SendQuestionnaireModel
@{
    ViewData["Title"] = "SendQuestionnaire";
}


<!-- some code taken from https://www.learnrazorpages.com/razor-pages/model-binding -->
<section>
    <div class="container">
        <h3>@ViewData["confirmation"]</h3>
        <div>
            <div class="text-center">
                <h2 class="display-4">Send a Questionnaire</h2>
                <form method="post">
                    <div class="col-sm-10">
                        <div class="checkboxes">
                            @if (Model.QuestionnairesLists != null)
                            {
                                foreach (var questionnaires in Model.QuestionnairesLists)
                                {
                                    <tr>
                                        <td>@questionnaires.title</td>
                                        <td>

                                            <ItemTemplate>
                                                <input type="checkbox" name="QuestionnaireId" value="@questionnaires.questionID" /><br />
                                                <!--if user == lab manager, show results for deleting questionnaire???-->
                                            </ItemTemplate>

                                        </td>
                                    </tr>
                                }
                            }
                        </div>

                    </div>
                    <div>
                        <h3>Who to send this to?</h3>
                        <p> </p>
                        <label for="Email" class="col-sm-2 control-label">Enter emails, separate each with commas</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" name="Email" multiple>
                        </div>
                    </div>
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Send</button>
                    </div>
                </form>
                    @if (ViewData["questionnaireId"] != null)
                    {
                        <h2> You sent the following questionnaires: @string.Join(",", (int[])ViewData["questionnaireId"]) to @ViewData["email"] </h2>
                    }

                    @if (Model.QuestionnairesLists != null)
                    {
                       

                    }

    </div>

</section>
