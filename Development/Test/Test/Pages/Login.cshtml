@page
@model Test.LoginModel
@using System.Security.Claims
@{
    ViewData["Title"] = "Login";
}

<html>
<body>
    <section>
        <div class="container">
            <h2>Login to your Researcher Account</h2>

            <!-- checking that the entered credentials are authorised-->
            @if (ViewData["password"] != null && Convert.ToBoolean(ViewData["auth"]) == true)
            {
                <!-- acknowledge authorisation-->
                <h2> You have logged in! :) </h2>
            }
            else if (ViewData["password"] != null && Convert.ToBoolean(ViewData["auth"]) == false)
            {
                <h2> You have failed to login! :( </h2>

            }


            <div class="text-center">
                <form method="post">
                    <label>Please enter your username:</label>
                    <input type="text" asp-for="log.username" placeholder="Username" />
                    <label>Please enter your password:</label>
                    <input type="password" asp-for="log.passwordHash" placeholder="Password" />
                    <button type="submit" class="btn btn-default" asp-page-handler="Login">Submit</button>
                </form>
            </div>
        </div>
    </section>
    
</body>
</html>