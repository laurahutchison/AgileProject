@page
@model Test.SendQuestionnaireModel
@{
    ViewData["Title"] = "SendQuestionnaire";
}


<br />
<br />
<br />
<br />
<!-- some code taken from https://www.learnrazorpages.com/razor-pages/model-binding -->

<h3>@ViewData["confirmation"]</h3>
<form class="form-horizontal" method="post">
    <div class="text-center">
        <h2 class="display-4">Send a Questionnaire</h2>
        <div class="col-sm-10">
            <input type="checkbox" name="QuestionnaireId" value="1"> Questionnaire 1<br />
            <input type="checkbox" name="QuestionnaireId" value="2"> Questionnaire 2<br />
            <input type="checkbox" name="QuestionnaireId" value="3"> Questionnaire 3<br />
            <input type="checkbox" name="QuestionnaireId" value="4"> Questionnaire 4<br />
        </div>
        @if(ViewData["questionnaireId"] != null)
        {
    <h2> You sent the following questionnaires: @string.Join(",", (int[])ViewData["questionnaireId"]) to @ViewData["email"] </h2>
        }

        <h3>Who to send this to?</h3>
        <p> </p>

        <div class="form-group">
            <label for="Email" class="col-sm-2 control-label">Enter emails, separate each with commas</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="Email" multiple>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Send</button>
            </div>
        </div>
</form>

